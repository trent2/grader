<html t:type="layout" title="${message:heading}" sidebarTitle="${message:sidebar-title}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

	<ul>
		<li>
			<t:pagelink page="criterion/create">${message:create}</t:pagelink>
		</li>
	</ul>
	<p:sidebar>

		<t:grid source="criteria" row="criterion" add="delete, update">
			<p:deletecell>
				<t:actionlink t:id="delete" context="criterion">${message:delete}
				</t:actionlink>
			</p:deletecell>
			<p:updatecell>
				<t:actionlink t:id="update" context="criterion">${message:update}
				</t:actionlink>
			</p:updatecell>
		</t:grid>
	</p:sidebar>
</html>
